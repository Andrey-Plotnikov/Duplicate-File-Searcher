<Window x:Class="DuplicateFileSearcher.ChooseForlderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuplicateFileSearcher"
        mc:Ignorable="d"
        Title="Директория поиска" Height="400" Width="600" MinHeight="400" MinWidth="600">
    <Grid>
        <ListBox x:Name="directory_listbox" Margin="10,35,10,35" MouseDoubleClick="directory_listbox_MouseDoubleClick"/>
        <TextBox x:Name="current_path_textbox" Margin="45,10,10,0" Text="Выберите логический том" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" IsReadOnly="True"/>
        <Button x:Name="choose_button" Content="Выбрать текущий каталог" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="160" Click="choose_button_Click"/>
        <Button x:Name="cancel_button" Content="Отмена" Margin="0,0,175,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="72" Click="cancel_button_Click"/>
        <Button x:Name="back_dir_button" Content=" ← " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="30" Click="back_dir_button_Click"/>

    </Grid>
</Window>
